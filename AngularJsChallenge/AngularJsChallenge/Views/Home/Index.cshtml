                        <option value="0">All</option>
                        <option value="5557">Technical Proposal</option>
                        <option value="5559">Financial Proposal</option>
                        <option value="6018">Resume</option>
                    </select>
                </label>
                <label class="checkbox"><input type="checkbox" value="true"> Show Only Drafts</label>
                <label class="checkbox"><input type="checkbox" value="true"> View Segments with Missing Taxonomies</label>
            </div>
            <a class="btn" style="float: right; margin: 8px 8px 0 0;"><i class="icon icon-search"></i> Search</a>
            <a class="btn" style="float: right; margin: 8px 8px 0 0;"><i class="icon icon-repeat"></i></a>
        </form>

