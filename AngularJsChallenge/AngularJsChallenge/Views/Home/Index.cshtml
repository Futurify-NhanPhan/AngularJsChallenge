<div ng-controller="manageCtrl">
    <div class="tab-pane active col-md-3">
        <form action="/Clauses/SearchClausesByPage" class="clearfix" method="get">
            <label>Search Segments </label>
            <input class="input-xlarge" style="margin-bottom: 10px; height: 28px;" type="text" value="">
            <br>
            <div class="form-inline">
                <label class="checkbox"><input type="checkbox" value="true"> <b>Advanced Search</b></label>
            </div>
            <div class="tab-pane control-group" style="display: block;">
                <label>Content Classification</label>
                <select class="input-xlarge">
                    <option>All</option>
                    <option>ACME Secteur Financier FR</option>
                    <option>ACME Service Summary</option>
                    <option>Corporate Organization</option>
                    <option>Corporate Profile</option>
                </select>
