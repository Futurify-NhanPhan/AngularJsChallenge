@{
    ViewBag.Title = "Home Page";
}
@section Scripts {

    <script src="~/Scripts/index.js"></script>

}
<div ng-controller="manageCtrl">
    <div class="tab-pane active col-md-3">
        <form action="/Clauses/SearchClausesByPage" class="clearfix" method="get">
            <label>Search Segments </label>
            <input class="input-xlarge" style="margin-bottom: 10px; height: 28px;" type="text" value="">
            <br>
            <div class="form-inline">
                <label class="checkbox"><input type="checkbox" value="true"> <b>Advanced Search</b></label>
            </div>
            <div class="tab-pane control-group" style="display: block;">
                <label>Content Classification</label>
                <select class="input-xlarge">
                    <option>All</option>
                    <option>ACME Secteur Financier FR</option>
                    <option>ACME Service Summary</option>
                    <option>Corporate Organization</option>
                    <option>Corporate Profile</option>
                </select>
                <label>
                    Document Type
                    <select class="input-xlarge">
                        <option value="0">All</option>
                        <option value="5557">Technical Proposal</option>
                        <option value="5559">Financial Proposal</option>
                        <option value="6018">Resume</option>
                    </select>
                </label>
                <label class="checkbox"><input type="checkbox" value="true"> Show Only Drafts</label>
                <label class="checkbox"><input type="checkbox" value="true"> View Segments with Missing Taxonomies</label>
            </div>
            <a class="btn" style="float: right; margin: 8px 8px 0 0;"> Search</a>
            <a class="btn" style="float: right; margin: 8px 8px 0 0;"> Reset</a>
        </form>

    </div>
    <div class="zone zone-content col-md-9">

        <div class="clause clause-normal well" ng-repeat="x in segments">
            <article class="content-item clearfix summary clause">
                <header class="clearfix">
                    <div>
                        <div class="autowidth-left">
                            <ul class="pageStatus">
                                <li><img class="icon" src="{{x.State==0?'/Images/online.gif':'/Images/draft.gif'}}"> </li>
                                <li>{{x.State==0?'Pulished':'Draft'}}</li>
                                <li>{{x.CreatedOn |date: 'dd/MM/yyyy'}}</li>
                            </ul>
                        </div>
                    </div>
                    <div class="metadata">
                        <div class="clause-meta meta-repository">
                            <img class="meta-repository repo-icon" src="{{x.ThumbnailUrl}}">
                        </div>

                        <span class="clause-meta meta-doctype">{{x.DocumentType ==0?'Technical':'Financial'}}</span><span class="clause-meta meta-clauseid">{{x.Id}}</span>
                    </div>
                </header>
                <div class="clearfix">

                    <fieldset class="taxonomy-field horizontal ">
                        <label class="name col-md-3">Content Classification</label>
                        <span class="col-md-9">
                            {{x.ContentClassification}}
                           
                        </span>
                    </fieldset>
                </div>
            </article>
        </div>



    </div>

</div>
